<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between">
        <h5 class="card-title">{{title}}</h5>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newcat">
                Новый блог
        </button>
        </div>
        <table class="table table-bordered">
    <thead>
        <tr>
            <th>№</th>
        <th>Фотография блога</th>
        <th scope="col">Названия</th>
        <th scope="col">Номер</th>
        <th scope="col">Краткое описание: </th>
        <th scope="col">Описание</th>

        <th scope="col">Дата</th>
        <th scope="col">Статус </th>
        <th colspan="2" class="text-center">Изменить</th>
        </tr>
    </thead>
    <tbody>
        {{#each blog}}
            <tr>
                <th>{{@index}}</th>
                <th><img src="/{{img}}" width="50"></th>
                <td>{{title}}</td>
                <th>{{order}}</th>
                <th>{{{description}}}</th>
                <th>{{{text}}}</th>
                <th>{{createdAt}}</th>
                <td><a href="/blog/status/{{_id}}">{{{status}}}</a></td>
                <td><button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#upcat"
                onclick="edit('{{_id}}')"
                >
                <i class="fa fa-pen"></i>
        </button></td>
                <td>
                    <a href="/blog/delete/{{_id}}" class="btn btn-danger" onclick="return confirm('Qaroringiz qatiymi?')"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        {{/each}}
    </tbody>

</table>
    </div>
</div>


<div class="modal fade" id="newcat" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Новый блог</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                    <form action="/blog?_csrf={{csrf}}" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="">Фотография блога</label>
                            <input class="form-control" name="img" type="file" id="img" multiple="">
                    </div>
                     <input type="hidden" name="_id">
                        <div class="form-floating mb-3">
                                <input type="text" 
                                class="form-control" 
                                name="title"
                                id="floatingInput" 
                                required="required"
                                placeholder="Заголовок блога">
                                <label for="floatingInput">Заголовок блога</label>
                                </div>
                                <div class="col-12 mb-3">
                                        <label class="mt-3">Краткое описание:</label>
                                        <textarea class="form-control" id="description" name="description" aria-label="With textarea"></textarea>   
                            </div>
                                <div class="col-12 mb-3">
                                        <label class="mt-3">Описание:</label>
                                        <textarea class="form-control" id="text"     name="text" aria-label="With textarea"></textarea>   
                            </div>
                        <div class="form-floating mb-3">
                                <input type="number" 
                                value="0"
                                name="order"
                                required="required"
                                class="form-control" 
                                id="floatingInput" 
                                placeholder="Порядковый номер">
                                <label for="floatingInput">Порядковый номер</label>
                                </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" 
                                        name="status"
                                        value="1"
                                        id="faol" checked="">
                                    
                                        <label class="form-check-label" for="faol">Активный?</label>
                                    </div>                
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрывать</button>
            <button type="submit" class="btn btn-primary">Добавить</button>
            </div>
                    </form> 
        </div>
        </div>
    </div>
