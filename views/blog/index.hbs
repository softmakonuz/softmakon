    <div class="modal fade" id="upcat" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Редактировать Новасть</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                    <form action="/blog/save?_csrf={{csrf}}" method="post" name="editform" enctype="multipart/form-data">
                <div class="mb-3">
                        <label for="">Фотография блога</label>
                        <div class="row align-items-center" >
                    <div class="col-6">
                        <img src="" alt="" id="showimg" width="125" style="display:none ;">
                            </div>
                            <div class="col-6">
                            <input class="form-control" name="img" type="file" id="img" multiple="">
                            </div>
                        </div>
                    </div>
                        <input type="hidden" name="_id">
                        <div class="form-floating mb-3">
                                <input type="text" 
                                class="form-control" 
                                name="title"
                                id="floatingInput" 
                                required="required"
                                placeholder="Заголовок блога">
                                <label for="floatingInput">Заголовок блога</label>
                                </div>
                                <div class="col-12 mb-3">
                                        <label class="mt-3">Краткое описание:</label>
                                        <textarea class="form-control" id="description1" name="description" aria-label="With textarea"></textarea>   
                            </div>
                                <div class="col-12 mb-3">
                                        <label class="mt-3">Описание:</label>
                                        <textarea class="form-control" id="text1" name="text" aria-label="With textarea"></textarea>   
                            </div>
                        <div class="form-floating mb-3">
                                <input type="number" 
                                value="0"
                                name="order"
                                required="required"
                                class="form-control" 
                                id="floatingInput" 
                                placeholder="Порядковый номер">
                                <label for="floatingInput">Порядковый номер</label>
                                </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" 
                                        name="status"
                                        value="1"
                                        id="faol" checked="">
                                    
                                        <label class="form-check-label" for="faol">Активный?</label>
                                    </div>                
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрывать</button>
            <button type="submit" class="btn btn-primary">Добавить</button>
            </div>
                    </form> 
        </div>
        </div>
    </div>
    <script src="https://cdn.ckeditor.com/4.19.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace( 'text' );
        CKEDITOR.replace( 'description' );

        let form = document.forms.editform
        let img = document.getElementById('showimg')
        function edit(id){
            fetch(`/blog/get/${id}`)
            .then(res => res.json())
            .then(blog =>{
                form.title.value = blog.title
                form._id.value = blog._id
                form.order.value = blog.order
                form.text1.value = blog.text
                form.description1.value = blog.description
                form.status.checked = blog.status == 1 ? true : false
                CKEDITOR.replace( 'text1' );
                CKEDITOR.replace( 'description1' );

                if(blog.img){
                    img.setAttribute('src', `${blog.img}`)
                    img.style.display = 'block'
                }
            })
        }
    </script>  