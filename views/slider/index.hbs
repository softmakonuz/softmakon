                                            placeholder="Заголовок раздела">
                                            <label for="floatingInput">Силка к тавару </label>
                                    </div>
                                <div class="form-floating mb-3">
                                        <input type="text" 
                                        class="form-control" 
                                        name="text"
                                        id="floatingInput" 
                                        required="required"
                                        placeholder="Заголовок раздела">
                                <label for="floatingInput">Текст</label>
                                </div>
                        <div class="form-floating mb-3">
                                <input type="number" 
                                value="0"
                                name="order"
                                required="required"
                                class="form-control" 
                                id="floatingInput" 
                                placeholder="Порядковый номер">
                                <label for="floatingInput">Порядковый номер</label>
                                </div>
                                    <div class="form-check form-switch">
