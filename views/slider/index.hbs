<div class="row">
    <div class="col">
        <div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between">
        <h5 class="card-title">{{title}}</h5>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newcat">
                Новый слайдер
        </button>
        </div>
        <table class="table table-bordered " >
    <thead>
        <tr>
        <th>Фото слайдера</th>
        <th scope="col">Названия</th>
        <th scope="col">Порядковый номер</th>
        <th scope="col">Текст</th>
        <th scope="col">Сылка</th>
        <th scope="col">Статус </th>
        <th colspan="2" class="text-center">Изменить</th>
        </tr>
    </thead>
    <tbody>
        {{#each sliders}}
            <tr>
                <th><img src="/{{img}}" width="50"></th>
                <td>{{title}}</td>
                <td>{{order}}</td>
                <td>{{text}}</td>
                
                <td >{{link}}</td>
                <td><a href="/slider/status/{{_id}}">{{{status}}}</a></td>
                <td><button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#upcat"
                onclick="edit('{{_id}}')"
                >
                <i class="fa fa-pen"></i>
        </button></td>
                <td>
                    <a href="/slider/delete/{{_id}}" class="btn btn-danger" onclick="return confirm('Qaroringiz qatiymi?')"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        {{/each}}
    </tbody>

</table>
        </div>
            </div>
                </div>
                    </div>
                        </div>


