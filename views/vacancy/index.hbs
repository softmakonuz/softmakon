<div class="row">
    <div class="col">
    <div class="card">
        <div class="card-body">
            <div class="d-flex align-items-center justify-content-between">
            <h5 class="card-title">{{title}}</h5>
                    <button type="button" class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#newcat">
                    Новый вакансия
            </button>
            </div>
            <div class="table-responsive{-sm|-md|-lg|-xl|-xxl}">

            <table class="table table-bordered  table-hover">
                <thead>

                <tr>
                    <th scope="col">№</th>
                    <th scope="col">Название</th>
                    <th scope="col">Время</th>
                    <th scope="col">Порядка номер</th>
                    <th scope="col">Статус</th>
                <td colspan="3" class="text-center">Изменить</td>
            </tr>
                </thead>
        <tbody>
            {{#each vacancy}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{name}}</td>
                    <td>{{createdAt}}</td>
                    <td>{{order}}</td>
                    <td><a href="/vacancy/status/{{_id}}">{{{status}}}</a></td>
                    <td>
                        <button class="btn btn-primary" onclick="show('{{_id}}') " data-bs-toggle="modal" data-bs-target="#showvacancy">
                            <i class="fa fa-eye"></i>
                        </button>
                        {{!-- <a href="/vacancy/view/{{_id}}" class="btn btn-primary">
                        <i class="fa fa-eye"></i>
                        </a> --}}

                    </td>
                    <td>
                    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#upcat"
                    onclick="edit('{{_id}}')"
                    ><i class="fa fa-pen"></i></button>
                </td>
                    <td>
                        <a href="/vacancy/delete/{{_id}}" class="btn btn-danger" onclick="return confirm('Qaroringiz qatiymi?')"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            {{/each}}
        </tbody>

    </table>
            </div>
        </div>
    </div>

    </div>
</div>
